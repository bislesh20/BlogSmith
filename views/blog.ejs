<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/nav') %> <%- include('./partials/head') %>
    <style>
      body {
        margin: 0;
        background-color: #1a1a1a;
        color: #fff;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
      .main-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 80px 100px;
        flex-wrap: wrap;
      }
      .left-content {
        max-width: 60%;
      }
      .left-content h1 {
        font-size: 3.5rem;
        font-weight: bold;
        line-height: 1.3;
      }
      .left-content h1 span {
        color: #00bcd4;
      }
      .left-content p {
        font-size: 1.2rem;
        line-height: 1.8;
        margin-top: 30px;
      }
      .right-img {
        max-width: 250px;
        border-radius: 15px;
      }
      .back-btn {
        margin: 40px 100px;
        padding: 10px 20px;
        font-size: 1rem;
        background-color: #00bcd4;
        color: #000;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
      }
      .back-btn:hover {
        background-color: #0097a7;
        color: white;
      }
      @media (max-width: 768px) {
        .main-section {
          flex-direction: column;
          padding: 50px 30px;
        }
        .left-content {
          max-width: 100%;
        }
        .right-img {
          margin-top: 30px;
        }
      }
      .add-btn {
        padding: 7px 20px;
        font-size: 1rem;
        background-color: #00bcd4;
        color: #000;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
      }
      .add-btn:hover {
        background-color: #0097a7;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="main-section">
      <div class="left-content">
        <h1>
          <span><%= blog.title %></span>
        </h1>
        <p><%= blog.body %></p>
      </div>
      <img src="<%= blog.coverImageURL %>" class="right-img" alt="Blog Cover" />
    </div>

    <!-- Author Section -->
    <div class="container mt-4" style="margin: 40px 100px">
      <img
        src="<%= blog.createdBy && blog.createdBy.profileImageURL ? blog.createdBy.profileImageURL : '/images/default.png' %>"
        width="50px"
        style="border-radius: 50%; margin-right: 5px"
      />
      <%= blog.createdBy && blog.createdBy.fullName ? blog.createdBy.fullName :
      'Unknown Author' %>
    </div>

    <!-- Comment Section -->
    <% if (locals.user) { %>
    <div class="container mt-3" style="margin: 40px 100px">
      <h6>Comments (<%= comments.length %>)</h6>
      <form action="/blog/comment/<%= blog._id %>" method="POST">
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            name="content"
            placeholder="Enter Comments..."
          />
          <button type="submit" style="margin-top: 7px" class="add-btn">
            Add
          </button>
        </div>
      </form>
    </div>
    <% } %>

    <!-- Display Comments -->
    <div class="mt-3">
      <% comments.forEach(comment => { %>
      <div style="margin: 40px 100px">
        <img
          src="<%= comment.createdBy && comment.createdBy.profileImageURL ? comment.createdBy.profileImageURL : '/images/default.png' %>"
          width="40px"
          style="border-radius: 50%; margin-right: 5px"
        />
        <%= comment.createdBy && comment.createdBy.fullName ?
        comment.createdBy.fullName : 'Anonymous' %>
        <pre style="margin-top: 5px"><%= comment.content %></pre>
      </div>
      <% }) %>
    </div>

    <a href="/" class="back-btn">‚Üê Back to Home</a>

    <%- include('./partials/scripts') %>
  </body>
</html>
